{
    "name": "LSTM",
    "n_gpu": 1,

    "arch": {
        "type": "LargeNet",
        "args": {
            "input_size": 138,
            "output_size": 8,
            "lstm_hidden": 2048,
            "lstm_layers": 1,
            "projection_size": 512,
            "dropout_prob": 0.5
        }
    },
    "data_loader": {
        "type": "LargeDataLoader",
        "args":{
            "data_dir": "./preprocess/assets/large_features/",
            "scaler_dir": "./preprocess/assets/scalers/",
            "batch_size": 256,
            "shuffle": true,
            "window": 180,
            "num_workers": 4,
            "augment": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001
        }
    },
    "loss": "batch_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "logs/",
        "tta": true
    },
    "wandb": {
        "sweep_id": "",
        "project": "sec-lstm-final",
        "entity": "snu-hci"
    }
}
