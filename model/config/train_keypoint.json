{
    "name": "LSTM",
    "n_gpu": 1,

    "arch": {
        "type": "KeypointNet",
        "args": {
            "input_size": 96,
            "output_size": 8,
            "lstm_hidden": 1024,
            "dropout_prob": 0.4
        }
    },
    "data_loader": {
        "type": "BaseDataLoader",
        "args":{
            "data_dir": "./preprocess/assets/train/sampled/keypoints/",
            "scaler_dir": "./preprocess/assets/scalers/",
            "batch_size": 256,
            "shuffle": true,
            "window": 8,
            "num_workers": 2,
            "augment": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "logs/",
        "tta": true
    },
    "wandb": {
        "sweep_id": "",
        "project": "sec-lstm-final",
        "entity": "snu-hci"
    }
}
