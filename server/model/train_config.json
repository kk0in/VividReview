{
    "name": "Train",
    "n_gpu": 1,

    "arch": {
        "type": "SimpleNet",
        "args": {
            "input_size": 138,
            "output_size": 8,
            "linear_layers": 0,
            "lstm_hidden": 1024,
            "dropout_prob": 0.2
        }
    },

    "pose_dir": "pose/",
    "checkpoint_dir": "checkpoints/",
    "scaler_dir": "scalers/",

    "data_loader": {
        "type": "BaseDataLoader",
        "args":{
            "data_path": {},
            
            "batch_size": 256,
            "shuffle": true,
            "window": 8,
            "num_workers": 2,
            "augment": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "logs/"
    },
    "wandb": {
        "sweep_id": "",
        "project": "",
        "entity": "entity"
    }
}
