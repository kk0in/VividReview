{
    "name": "LSTM",
    "n_gpu": 1,

    "arch": {
        "type": "SimpleNet",
        "args": {
            "input_size": 138,
            "output_size": 8,
            "linear_layers": 1,
            "lstm_hidden": 512,
            "dropout_prob": 0.3
        }
    },
    "data_loader": {
        "type": "FullDataLoader",
        "args":{
            "data_dir": "./preprocess/assets/train/overlap/features/",
            "scaler_dir": "./preprocess/assets/scalers/",
            "batch_size": 512,
            "shuffle": true,
            "window": 8,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "logs/"
    },
    "wandb": {
        "sweep_id": "",
        "project": "sec-lstm-final",
        "entity": "snu-hci"
    }
}
